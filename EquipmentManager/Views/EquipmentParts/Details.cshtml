@model EquipmentManager.Data.EquipmentPart

@{
    ViewBag.Title = "Details";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Equipment", "Index", "Equipment")</li>
    <li>@Html.ActionLink(Model.EquipmentModule.Equipment.Name, "Details", "Equipment", new { id = Model.EquipmentModule.EquipmentId }, null)</li>
    @foreach (var item in Model.EquipmentModule.ModuleHierarchy)
    {
        <li>@Html.ActionLink(item.Value, "Details", "EquipmentModules", new { id = item.Key }, null)</li>
    }
    <li class="active">@Model.Part.Name </li>
</ol>

