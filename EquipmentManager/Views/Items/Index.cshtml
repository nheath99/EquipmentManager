@model IEnumerable<EquipmentManager.Data.Item>

@{
    ViewBag.Title = "Index";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li class="active">Items</li>
</ol>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-condensed table-hover table-bordered">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Obsolete)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkShort)
            </td>
            <td>
                @if (item.ItemCategory != null)
                {
                    @Html.ActionLink(item.ItemCategory.Name, "Details", "ItemCategories", new { id = item.ItemCategory.Id }, null)
                }
            </td>
            <td>
                @if (item.Manufacturer != null)
                {
                    @Html.ActionLink(item.Manufacturer.Name, "Details", "Manufacturers", new { id = item.Manufacturer.Id }, null)
                }
            </td>
            <td>
                @if (item.Supplier != null)
                {
                    @Html.ActionLink(item.Supplier.Name, "Details", "Suppliers", new { id = item.Supplier.Id }, null)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Obsolete)
            </td>
        </tr>
    }

</table>
