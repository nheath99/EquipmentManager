@model EquipmentManager.Data.Installation

@{
    ViewBag.Title = string.Format("{0} - Modules", Model.Name);
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Installations", "Index", "Installations")</li>
    <li>@Html.ActionLink(Model.Name, "Details", "Installations", new { id = Model.Id }, null)</li>
    <li class="active">Modules</li>
</ol>

<ul class="checkbox-list">
    @foreach (var module in Model.TopLevelModules)
    {
        <li>
            @Html.ActionLink(module.Name, "Details", "InstallationEquipmentModules", new { id = module.Id }, null)
            @Html.Partial("_ChildModules", module)            
        </li>
    }
</ul>